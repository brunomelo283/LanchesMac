@model Pedido
<br />
<div class="h-100 p-5 bg-light border rounded-3">    
    <h2>@ViewBag.CheckoutCompletoMensagem</h2>                
    <p>Cliente:<strong>@Model.Nome</strong></p>
    <br />
    <p>Numero do pedido: <strong>@Model.PedidoId </strong></p>
    <br />
    <p>Data do pedido: <strong>@Model.PedidoEnviado</strong></p>
    <br />
    @foreach(var item in Model.PedidoItens)
    {
        <img src="@item.Lanche.ImageUrl" width="40" height="40" />
        <ul>@item.Quantidade</ul>
        <ul>@item.Lanche.Nome</ul>
        <ul>@item.Preco</ul>
    }
    <p>Total do Pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("c"))</strong></p>                    
</div>