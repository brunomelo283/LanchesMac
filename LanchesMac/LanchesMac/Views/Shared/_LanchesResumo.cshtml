@model Lanche
<div class="col-sm-4 col-md-4 col-lg-4">
    <div class="img-thumbnail">
        <p><img src="../@Model.ImageUrl" class="img-fluid" /> </p>
    </div>
    <div class="caption">
        <h3>Preço: @Model.Preco.ToString("c")</h3>
        <h4><a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId"> @Model.Nome </a></h4>
        <p>@Model.DescricaoCurta</p>
    </div>
     <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                    Incluir no Carrinho
                </a>
            </p>
     </div>
     
</div>
